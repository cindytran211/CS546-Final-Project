<h2>Add Payment page</h2>

 <p> Card Index {{idnum}}</p>


<form action="/addPayment" method="POST" id="addPayment-form">
    <label for="cardName">Name on Card</label>
    <input id="cardName" type="text" name="cardName" placeholder="John Public" value="{{cardName}}" >

<br><br>

    <label for="cardNumber">Card Number</label>
    <input id="cardNumber" type="text" name="cardNumber" placeholder="1234-5678-1234-5678" pattern="[0-9]{4}-[0-9]{4}-[0-9]{4}-[0-9]{4}" value="{{cardNumber}}" >


    <input id="_id" type="hidden" name="_id" value="{{_id}}"  >

    <input id="idnum" type="hidden" name="idnum" value="{{idnum}}"  >

<br><br>

	<label for="cardType">Payment Type</label>
    <input  list="cardType" name="cardType" value="{{cardType}}"  >
	<datalist id="cardType" >
		<option value="credit" >
		<option value="debit" >
	</datalist>
	
<br><br>

	<label for="cardBank">Creditcard Bank Name</label>
    <input id="cardBank" type="text" name="cardBank" placeholder="Bank Name" value="{{cardBank}}">

<br><br>

    <label for="expDate">Expiration Date</label>
    <input id="expDate" type="text" name="expDate" placeholder="12/22" pattern="[0-1][0-9]/[0-9]{2}" value="{{expDate}}" >

<br><br>

	<label for="description">Payment Description</label>
    <input id="description" type="text" name="description" placeholder="description" value="{{description}}">
	
<br><br>

    <button type="submit">Submit</button>
</form>

<br>
   
<a href="/addPayment/{{inc idnum}}">Next a Payment</a>
<br>
