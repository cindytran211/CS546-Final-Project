<h2>Profile page</h2>

<form action="/profile" method="POST" id="profile-form">
    <label for="firstName">First name</label>
    <input id="firstName" type="text" name="firstName"  value="{{firstName}}" >

    <label for="lastname">Last name</label>
    <input id="lastName" type="text" name="lastName"  value="{{lastName}}" >
 
    <br><br>

    <label for="email">Email</label>
    <input id="email" type="email" name="email"  value="{{email}}" >

    <label for="age">Age</label>
    <input id="age" type="number" name="age"  value="{{age}}" >

    <br><br>

    <label for="streetAddress">Street</label>
    <input id="streetAddress" type="text" name="streetAddress" value="{{streetAddress}}" >

    <br><br>

    <label for="city">City</label>
    <input id="city" type="text" name="city" value="{{city}}" >

    <label for="state">State</label>
    <input id="state" type="text" name="state" value="{{state}}" >

    <label for="zipcode">Zipcode</label>
    <input id="zipcode" type="zip" name="zipcode" pattern="[0-9]{5}"  value="{{zipcode}}" >

    <br><br>

    <label for="mobilePhone">Mobile Phone</label>
    <input id="mobilePhone" type="tel" name="mobilePhone" pattern="[0-9]{3}-[0-9]{3}-[0-9]{4}" value="{{mobilePhone}}" >

    <br><br>

    <label for="userId">UserId</label>
    <input id="userId" type="text" name="userId"  value="{{userId}}" >
    <label for="password">Password</label>
    <input id="password" type="password" name="password"  value="{{password}}" >
    <br>
    <button type="submit">Submit</button>
</form>
<br>
<a href="/auth"> Back to main</a>
<br>
<br>
{{#if error1}}
   <h3> {{error1}} </h3>
{{/if}}

